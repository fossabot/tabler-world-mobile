{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": [
            "es6",
            "esnext.asynciterable"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}